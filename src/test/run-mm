#!/bin/sh

DIR=~/misc/rockets/flights

for i in "$@"; do
    case "$i" in
	*/*)
	file="$i"
	;;
	*)
	file="$DIR/$i"
	;;
    esac
    base=`basename "$i" .eeprom`

    ./ao_flight_test_mm "$file" > $base.plot

    sh ./plotmm $base.plot `basename "$file"`
done

